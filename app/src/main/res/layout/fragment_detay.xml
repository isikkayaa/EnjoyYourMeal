<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="detayFragment"
            type="com.example.enjoyyourmeal.ui.fragment.DetayFragment" />
        <variable
            name="orderNesnesi"
            type="com.example.enjoyyourmeal.data.entity.Yemekler" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.DetayFragment">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Ürün Detayı"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonSepeteEkle"
            android:layout_width="199dp"
            android:layout_height="62dp"
            android:layout_marginTop="480dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#D7C4C4"
            android:text="Sepete Ekle"
            android:onClick="@{() -> detayFragment.buttonSepeteEkleTikla(buttonSepeteEkle)}"
            android:textColor="#4F2C4D"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/tvFiyat"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="576dp"
            android:text="110 ₺"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivOrder"
            android:layout_width="204dp"
            android:layout_height="229dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:src="@drawable/kahve" />

        <TextView
            android:id="@+id/tvUrunAdi"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="381dp"
            android:text="@{orderNesnesi.yemek_adi}"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUrunFiyati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="80dp"
            android:text='@{orderNesnesi.yemek_fiyat + "₺"}'
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivOrder" />

        <Button
            android:id="@+id/button"
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="42dp"
            android:text="-"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUrunAdi" />

        <Button
            android:id="@+id/button2"
            android:layout_width="52dp"
            android:layout_height="42dp"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="128dp"
            android:text="+"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivOrder" />

        <TextView
            android:id="@+id/tvAdet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="12dp"
            android:text="2"
            android:textSize="34sp"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/tvUrunAdi" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>